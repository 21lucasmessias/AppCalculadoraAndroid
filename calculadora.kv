<Numero@ButtonBehavior+Label>:

<Sinal@ButtonBehavior+Label>:

<Outro@ButtonBehavior+Label>:

<LabelTela@Label>:
    size_hint_x: None
    text_size: None, self.height
    width: self.texture_size[0]
    font_size: root.height * 0.7
    color: 0, 0, 0, 1
    halign: 'right'

<Manager>:
    Menu:
        name: 'Menu'
    Calculadora:
        name: 'Calculadora'

<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 13
        Image:
            source: 'oi.jpg'
        Button:
            size_hint_y: .2
            text: 'Calculadora'
            on_press:
                app.root.current = 'Calculadora'
        Button:
            size_hint_y: .1
            text: 'Sair'
            on_press:
                app.stop()

<Calculadora>:
    canvas.before:
        Rectangle:
            source: 'background.png'
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            padding: 15
            size_hint_y: .55
            orientation: 'vertical'
            ScrollView:
                id: scrollview_1
                scroll_x: 1
                do_scroll_y: False
                LabelTela:
                    id: tela_1
                    text: ''
                    on_text: root.halign_tela(self)
            ScrollView:
                id: scrollview_2
                do_scroll_y: False
                scroll_x: 1
                LabelTela:
                    id: tela_2
                    font_size: self.height * 0.35
                    text: ''
                    on_text: root.halign_tela(self)
        BoxLayout:
            GridLayout:
                rows: 4
                BoxLayout:
                    Numero:
                        font_size: self.height * 0.4
                        text: '7'
                        on_press:
                            root.press_numero(self.text)
                    Numero:
                        font_size: self.height * 0.4
                        text: '8'
                        on_press:
                            root.press_numero(self.text)
                    Numero:
                        font_size: self.height * 0.4
                        text: '9'
                        on_press:
                            root.press_numero(self.text)
                BoxLayout:
                    Numero:
                        font_size: self.height * 0.4
                        text: '4'
                        on_press:
                            root.press_numero(self.text)
                    Numero:
                        font_size: self.height * 0.4
                        text: '5'
                        on_press:
                            root.press_numero(self.text)
                    Numero:
                        font_size: self.height * 0.4
                        text: '6'
                        on_press:
                            root.press_numero(self.text)
                BoxLayout:
                    Numero:
                        font_size: self.height * 0.4
                        text: '1'
                        on_press:
                            root.press_numero(self.text)
                    Numero:
                        font_size: self.height * 0.4
                        text: '2'
                        on_press:
                            root.press_numero(self.text)
                    Numero:
                        font_size: self.height * 0.4
                        text: '3'
                        on_press:
                            root.press_numero(self.text)
                BoxLayout:
                    Sinal:
                        font_size: self.height * 0.4
                        text: '.'
                        on_press:
                            root.press_ponto()
                    Numero:
                        font_size: self.height * 0.4
                        text: '0'
                        on_press:
                            root.press_numero(self.text)
                    Outro:
                        font_size: self.height * 0.4
                        text: '='
                        on_press:
                            root.resultado()
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: .3
                padding: 5
                Outro:
                    font_size: self.height * 0.4
                    text: '<-'
                    on_press:
                        root.press_backspace()
                Outro:
                    font_size: self.height * 0.4
                    text: 'C'
                    on_press:
                        root.press_c()
                Sinal:
                    font_size: self.height * 0.3
                    text: '/'
                    on_press:
                        root.press_sinal(self.text)
                Sinal:
                    font_size: self.height * 0.3
                    text: '*'
                    on_press:
                        root.press_sinal(self.text)
                Sinal:
                    font_size: self.height * 0.3
                    text: '-'
                    on_press:
                        root.press_sinal(self.text)
                Sinal:
                    font_size: self.height * 0.3
                    text: '+'
                    on_press:
                        root.press_sinal(self.text)
            BoxLayout:
                size_hint_x: 0.1